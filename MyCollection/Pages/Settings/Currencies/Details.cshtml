@page
@model MyCollection.Pages.Currencies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Currency</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Currency.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Currency.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Currency.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Currency.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Currency.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Currency.Country.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Currency.WikiLink)
        </dt>
        <dd class="col-sm-10">
            @if(Model.Currency.WikiLink!=null)
                {
                    <a href="@Model.Currency.WikiLink">Wiki</a>
                }
        </dd>
    </dl>
</div>
<div>
    @if (Model.Currency.AllowEdit)
    {
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Currency?.Id">Edit</a>
    }
    <a class="btn btn-info" asp-page="./Index">Back to List</a>
</div>
