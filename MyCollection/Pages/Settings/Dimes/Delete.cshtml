@page
@model MyCollection.Pages.Dimes.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Dime</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dime.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dime.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dime.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dime.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dime.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dime.Country.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dime.WikiLink)
        </dt>
        <dd class="col-sm-10">
            @if(Model.Dime.WikiLink!=null)
                {
                    <a href="@Model.Dime.WikiLink">Wiki</a>
                }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Dime.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-info" asp-page="./Index">Back to List</a>
    </form>
</div>
