@page
@model MyCollection.Pages.Persons.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Person</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.FamilyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.FamilyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.FatherName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.FatherName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.Note)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Person.WikiLink)
        </dt>
        <dd class="col-sm-10">            
                @if(Model.Person.WikiLink!=null)
                {
                    <a href="@Model.Person.WikiLink">Wiki</a>
                }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Person?.Id">Edit</a> 
    <a class="btn btn-info" asp-page="./Index">Back to List</a>
</div>
