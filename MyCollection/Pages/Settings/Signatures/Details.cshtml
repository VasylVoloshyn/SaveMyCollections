@page
@model MyCollection.Pages.Signatures.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Signature</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Signature.Person)
        </dt>
        <dd class="col-sm-10">
            <div> @Model.Signature.Person.Name @Model.Signature.Person.FamilyName</div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Signature.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Signature.Note)
        </dd>
    </dl>
</div>
<div>
    @if (Model.Signature.AllowEdit)
    {
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Signature?.Id">Edit</a>
    }
    <a class="btn btn-info" asp-page="./Index">Back to List</a>
</div>
