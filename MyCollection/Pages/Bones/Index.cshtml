@model MyCollection.Pages.Bones.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bone[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bone[0].Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bone[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bone[0].Signature)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bone[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bone[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bone[0].Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bone[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Bone) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Signature.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
