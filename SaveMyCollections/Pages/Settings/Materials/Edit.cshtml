@page
@model SaveMyCollections.Pages.Settings.Materials.EditModel
@inject CommonLocalizationService commonLocalizer

@{
    ViewData["Title"] = "Edit";
}

<h1>@commonLocalizer.Get("Edit")</h1>

<h4>@commonLocalizer.Get("Material")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Material.Id" />
            <div class="form-group">
                <label asp-for="Material.Code" class="control-label"></label>
                <input asp-for="Material.Code" class="form-control" />
                <span asp-validation-for="Material.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material.Name" class="control-label"></label>
                <input asp-for="Material.Name" class="form-control" />
                <span asp-validation-for="Material.Name" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value=@commonLocalizer.Get("Save") class="btn btn-primary" />
                <a class="btn btn-info" asp-page="./Index">@commonLocalizer.Get("BackToList")</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
