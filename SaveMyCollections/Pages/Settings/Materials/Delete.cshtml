@page
@model SaveMyCollections.Pages.Settings.Materials.DeleteModel
@inject CommonLocalizationService commonLocalizer

@{
    ViewData["Title"] = "Delete";
}

<h1>@commonLocalizer.Get("Delete")</h1>

<h3>@commonLocalizer.Get("Are you sure you want to delete this?")</h3>
<div>
    <h4>@commonLocalizer.Get("Material")</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Material.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Material.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Material.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Material.Name)
        </dd>       
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Material.Id" />
        <input type="submit" value=@commonLocalizer.Get("Delete") class="btn btn-danger" /> 
        <a class="btn btn-info" asp-page="./Index">@commonLocalizer.Get("BackToList")</a>
    </form>
</div>
