@page
@model SaveMyCollections.Pages.Settings.Countries.DetailsModel
@inject CommonLocalizationService commonLocalizer

@{
    ViewData["Title"] = "Details";
}

<h1>@commonLocalizer.Get("Details")</h1>

<div>
    <h4>Country</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country.WikiLink)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Country.WikiLink != null)
            {
                <a href="@Model.Country.WikiLink">Wiki</a>
            }
        </dd>
    </dl>
</div>
<div>
    @if (Model.Country.AllowEdit)
    {
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Country?.Id">@commonLocalizer.Get("Edit")</a>
    }
    <a class="btn btn-info" asp-page="./Index">@commonLocalizer.Get("BackToList")</a>
</div>
