@page
@model SaveMyCollections.Pages.Settings.Countries.DeleteModel
@inject CommonLocalizationService commonLocalizer

@{
    ViewData["Title"] = "Delete";
}

<h1>@commonLocalizer.Get("Delete")</h1>
<h3>@commonLocalizer.Get("Are you sure you want to delete this?")</h3>

<div>
    <h4>@commonLocalizer.Get("Country")</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country.WikiLink)
        </dt>
        <dd class="col-sm-10">
             @if(Model.Country.WikiLink!=null)
                {
                    <a href="@Model.Country.WikiLink">Wiki</a>
                }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Country.Id" />
        <input type="submit" value=@commonLocalizer.Get("Delete") class="btn btn-danger" /> 
        <a class="btn btn-info" asp-page="./Index">@commonLocalizer.Get("BackToList")</a>
    </form>
</div>
