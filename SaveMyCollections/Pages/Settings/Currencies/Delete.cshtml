@page
@model SaveMyCollections.Pages.Currencies.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Currency</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Currency.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Currency.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Currency.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Currency.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Currency.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Currency.Country.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Currency.WikiLink)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Currency.WikiLink != null)
            {
                <a href="@Model.Currency.WikiLink">Wiki</a>
            }
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Currency.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-info" asp-page="./Index">Back to List</a>
    </form>
</div>
