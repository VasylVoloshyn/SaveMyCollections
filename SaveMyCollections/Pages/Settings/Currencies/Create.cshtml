@page
@model SaveMyCollections.Pages.Settings.Currencies.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Currency</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Currency.Code" class="control-label"></label>
                <input asp-for="Currency.Code" class="form-control" />
                <span asp-validation-for="Currency.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency.Name" class="control-label"></label>
                <input asp-for="Currency.Name" class="form-control" />
                <span asp-validation-for="Currency.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Currency.CountryId" class="control-label"></label>
                <select asp-for="Currency.CountryId" class ="form-control" asp-items="ViewBag.CountryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Currency.WikiLink" class="control-label"></label>
                <input asp-for="Currency.WikiLink" class="form-control" />
                <span asp-validation-for="Currency.WikiLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-info" asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
