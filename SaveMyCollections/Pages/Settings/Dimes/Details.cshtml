@page
@model SaveMyCollections.Pages.Dimes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Dime</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dime.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dime.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dime.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dime.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dime.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dime.Country.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dime.WikiLink)
        </dt>
        <dd class="col-sm-10">
           @if (Model.Dime.WikiLink != null)
            {
                <a href="@Model.Dime.WikiLink">Wiki</a>
            }
        </dd>
    </dl>
</div>
<div>
    @if (Model.Dime.AllowEdit)
    {
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Dime?.Id">Edit</a>
    }
    <a class="btn btn-info" asp-page="./Index">Back to List</a>
</div>
