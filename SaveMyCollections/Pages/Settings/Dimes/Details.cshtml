@page
@model SaveMyCollections.Pages.Settings.Dimes.DetailsModel
@inject CommonLocalizationService commonLocalizer

@{
    ViewData["Title"] = "Details";
}

<h1>@commonLocalizer.Get("Details")</h1>

<div>
    <h4>@commonLocalizer.Get("Dime")</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dime.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dime.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dime.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dime.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dime.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dime.Country.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dime.WikiLink)
        </dt>
        <dd class="col-sm-10">
           @if (Model.Dime.WikiLink != null)
            {
                <a href="@Model.Dime.WikiLink">Wiki</a>
            }
        </dd>
    </dl>
</div>
<div>
    @if (Model.Dime.AllowEdit)
    {
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Dime?.Id">@commonLocalizer.Get("Edit")</a>
    }
    <a class="btn btn-info" asp-page="./Index">@commonLocalizer.Get("BackToList")</a>
</div>
