@page
@model SaveMyCollections.Pages.Dimes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dime[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dime[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dime[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dime[0].WikiLink)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Dime)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country.Code)
                </td>
                <td>
                    @if (item.WikiLink != null)
                    {
                        <a href="@item.WikiLink">Wiki</a>
                    }
                </td>
                <td>
                    @if (item.AllowEdit)
                    {
                        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                    }
                    <a class="btn btn-primary" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                    @if (item.AllowEdit)
                    {
                        <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
