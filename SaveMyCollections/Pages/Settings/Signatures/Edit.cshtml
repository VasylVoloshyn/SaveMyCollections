@page
@model SaveMyCollections.Pages.Signatures.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Signature</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Signature.Id" />
            <div class="form-group">
                <label asp-for="Signature.PersonId" class="control-label"></label>
                <select asp-for="Signature.PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
                <span asp-validation-for="Signature.PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Signature.Note" class="control-label"></label>
                <input asp-for="Signature.Note" class="form-control" />
                <span asp-validation-for="Signature.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-info" asp-page="./Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
