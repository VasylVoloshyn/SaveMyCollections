@using Microsoft.AspNetCore.Authorization
@using SaveMyCollections.Services
@inject IAuthorizationService AuthorizationService
@inject CommonLocalizationService localizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Save My Collections</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SaveMyCollections.styles.css" asp-append-version="true" />
</head>
<body>
    <header>       
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area=""  asp-page="/Index">Save My Collections</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area=""  asp-page="/Index">Home</a>
                        </li>
                        <li>
                            <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                                <ul class="navbar-nav">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink"
                                           role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            Settings
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="navbarDarkDropdownMenuLink">
                                            <li>
                                                <a class="dropdown-item nav-link text-dark"
                                                   asp-area="" asp-page="/Settings/Currencies/Index">@localizer.Get("Currencies")</a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item nav-link text-dark"
                                                   asp-area="" asp-page="/Settings/Dimes/Index">Dimes</a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item nav-link text-dark"
                                                   asp-area="" asp-page="/Settings/Countries/Index">Countries</a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item nav-link text-dark"
                                                   asp-area="" asp-page="/Settings/Persons/Index">Persons</a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item nav-link text-dark"
                                                   asp-area="" asp-page="/Settings/Signatures/Index">Signatures</a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item nav-link text-dark"
                                                   asp-area="" asp-page="/Settings/BoneGrades/Index">Bone Grades</a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item nav-link text-dark"
                                                   asp-area="" asp-page="/Settings/CoinGrades/Index">Coin Grades</a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item nav-link text-dark"
                                                   asp-area="" asp-page="/Settings/StampTypes/Index">Stamp Types</a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item nav-link text-dark"
                                                   asp-area="" asp-page="/Settings/StampGrades/Index">Stamp Grades</a>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        @if ((await AuthorizationService.AuthorizeAsync(User, "RequireAdministratorRole")).Succeeded)
                        {
                            <li>
                                <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
                                    <ul class="navbar-nav">
                                        <li class="nav-item dropdown">
                                            <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink"
                                           role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                Admin
                                            </a>
                                            <ul class="dropdown-menu" aria-labelledby="navbarDarkDropdownMenuLink">
                                                <li>
                                                    <a class="dropdown-item nav-link text-dark"
                                                   asp-area="" asp-page="/Admin/RoleManager/Index">Role Manager</a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item nav-link text-dark"
                                                   asp-area="" asp-page="/Admin/UserRoles/Index">User Roles</a>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/General/Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            <vc:culture-switcher/>                
            </div>
            
            
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - SaveMyCollections - <a asp-area=""  asp-page="/General/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>