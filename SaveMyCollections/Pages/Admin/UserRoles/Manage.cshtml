@page
@model SaveMyCollections.Pages.Admin.UserRoles.ManageModel
@{
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
            Add/Remove Roles for User / @ViewBag.UserName.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.ManageUserRoles.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.ManageUserRoles[i].RoleId" />
                    <input type="hidden" asp-for="@Model.ManageUserRoles[i].RoleName" />
                    <input asp-for="@Model.ManageUserRoles[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.ManageUserRoles[i].Selected">
                        @Model.ManageUserRoles[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-primary" asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>
</form>