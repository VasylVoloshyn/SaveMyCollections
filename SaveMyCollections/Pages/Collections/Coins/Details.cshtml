@page
@model SaveMyCollections.Pages.Coins.DetailsModel
@inject CommonLocalizationService commonLocalizer

@{
    ViewData["Title"] = "Details";
}

<h1>@commonLocalizer.Get("Details")</h1>

<div>
    <h4>@commonLocalizer.Get("Coin")</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coin.Dime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coin.Dime.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coin.Nominal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coin.Nominal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coin.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coin.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coin.FirstDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coin.FirstDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coin.CoinMaterial)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coin.CoinMaterial.Name)
        </dd>        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coin.CoinGrade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coin.CoinGrade.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coin.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coin.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coin.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coin.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coin.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coin.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coin.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coin.Note)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName(commonLocalizer.Get("Avers"))
        </dt>
        <dd class="col-sm-10">
            <img style="width:800px; object-fit:cover; border-radius:5px"
                 src="@Model.Coin.CoinPhotos.Where(b=>b.IsAvers).FirstOrDefault()?.Photo?.FileLocation\@Model.Coin.CoinPhotos.Where(b=>b.IsAvers).FirstOrDefault()?.Photo?.FileName">
            
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName(commonLocalizer.Get("Revers"))
        </dt>
        <dd class="col-sm-10">
            <img style="width:800px; object-fit:cover; border-radius:5px"
                 src="@Model.Coin.CoinPhotos.Where(b=>b.IsRevers).FirstOrDefault()?.Photo?.FileLocation\@Model.Coin.CoinPhotos.Where(b=>b.IsRevers).FirstOrDefault()?.Photo?.FileName">
        </dd>
    </dl>
</div>
<div>
    @if (Model.Coin.AllowEdit)
    {
        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Coin?.Id">@commonLocalizer.Get("Edit")</a>
    }
    <a class="btn btn-info" asp-page="./Index">@commonLocalizer.Get("BackToList")</a>
</div>
